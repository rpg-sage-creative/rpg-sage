{
	"name": "@rsc-sage/localization",
	"version": "0.0.0",
	"private": true,
	"main": "build/index.js",
	"type": "module",
	"devDependencies": {
		"@rsc-utils/dev-scripts": "github:rpg-sage-creative/dev-scripts#semver:^1.3.1"
	},
	"dependencies": {
		"@rsc-utils/core-utils": "github:rpg-sage-creative/core-utils#semver:^1.4.0"
	},
	"scripts": {
		"scrub::node_modules": "rm -rf node_modules",
		"scrub::npm": "rm -f package-lock.json",
		"scrub::pnpm": "rm -f pnpm-lock.yaml",

		"build::clean-build-folder": "rm -rf build",
		"build::clean-build-info": "rm -f *.tsbuildinfo",
		"build::create-indexes": "[ -d './src' ] && pnpm dev-scripts create-indexes"
	}
}