{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "test-pre-build",
			"type": "shell",
			"command": "bash",
			"args": ["./scripts/pre-build.sh"],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true
			}
		},
		{
			"label": "test-transpile",
			"dependsOn": ["test-pre-build"],
			"type": "shell",
			"command": "tsc",
			"args": ["-p", "tsconfig.json"],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			"label": "test-post-build",
			"dependsOn": ["test-transpile"],
			"type": "shell",
			"command": "bash",
			"args": ["./scripts/post-build.sh"],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			"label": "run-tests",
			"dependsOn": ["test-post-build"],
			"type": "shell",
			"command": "bash",
			"args": ["./scripts/run-tests.sh"],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			"label": "pdf2json",
			"type": "shell",
			"command": "echo",
			"args": ["'declare module \"pdf2json\";'",">","./node_modules/pdf2json/index.d.ts"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			"label": "Transpile",
			"dependsOn": ["pdf2json"],
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": "$tsc",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		}
	]
}