{
	"name": "rpg-sage",
	"version": "1.13.0",
	"description": "RPG Sage Bot",
	"type": "module",
	"main": "./build/app.mjs",
	"files": [
		"build"
	],
	"directories": {
		"lib": "build"
	},
	"keywords": [
		"discord",
		"bot",
		"rpg",
		"ttrpg",
		"play-by-post",
		"pbp",
		"play-by-discord",
		"pbd",
		"pathfinder",
		"pathfinder2e",
		"pf2e",
		"starfinder",
		"starfinder2e",
		"sf2e",
		"essence20",
		"e20",
		"dnd5e",
		"vtm5e"
	],
	"private": true,
	"author": "Randal T Meyer <randal.t.meyer@gmail.com> (https://rpgsage.io)",
	"contributors": [],
	"license": "GPL-3.0-only",
	"bugs": {
		"url": "https://github.com/rpg-sage-creative/rpg-sage/issues",
		"email": "bugs@rpgsage.io"
	},
	"homepage": "https://github.com/rpg-sage-creative/rpg-sage#readme",
	"funding": {
		"type": "patreon",
		"url": "https://www.patreon.com/rpgsage"
	},
	"repository": "github:rpg-sage-creative/rpg-sage",
	"workspaces": [
		"packages/*/*"
	],
	"devDependencies": {
		"@types/follow-redirects": "^1.14.4",
		"@types/node": "^24.6.1",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@aws-sdk/client-sns": "^3.956.0",
		"@discordjs/rest": "^2.6.0",
		"@napi-rs/canvas": "^0.1.53",
		"@rsc-utils/core-utils": "rpg-sage-creative/core-utils#v0.13.3",
		"@rsc-utils/io-utils": "rpg-sage-creative/io-utils#v0.5.4",
		"@rsc-utils/discord-utils": "rpg-sage-creative/discord-utils#v0.4.4",
		"discord.js": "^14.25.1",
		"regex": "^6.1.0"
	},
	"exifreader": {
		"include": {
			"file": true,
			"gif": true,
			"jpeg": true,
			"png": true,
			"png_file": true,
			"webp": true
		}
	},
	"scripts": {
		"build": "bash ./node_modules/@rsc-utils/core-utils/scripts/sh/build.sh --skipIndexTs",
		"release": "bash ./node_modules/@rsc-utils/core-utils/scripts/sh/release.sh",
		"test": "echo 'no tests'",
		"clean": "rm -rf node_modules; rm -f package-lock.json; npm i; npm run build",
		"prestart-dev": "npm run build",
		"start-dev": "node ./build/bot.mjs codeName=dev --getFromEnvJson",
		"start-dev-and-services": "node ./build/bot.mjs codeName=dev --getFromEnvJson --spawnServices",
		"app-commands": "node ./build/app-commands.mjs codeName=dev dataRoot='./docker-volumes/rpg-sage-mono'",
		"preupdates": "npm run build",
		"processMessages": "node ./build/updates/processMessages.js codeName=dev --getFromEnvJson",
		"updates": "npm run processMessages"
	}
}
