{
	"name": "rpg-sage",
	"version": "1.11.1",
	"description": "RPG Sage Bot",
	"type": "module",
	"main": "./build/app.mjs",
	"files": [
		"build"
	],
	"directories": {
		"lib": "build"
	},
	"keywords": [
		"discord",
		"bot",
		"rpg",
		"ttrpg",
		"play-by-post",
		"pbp",
		"play-by-discord",
		"pbd",
		"pathfinder",
		"pathfinder2e",
		"pf2e",
		"starfinder",
		"starfinder2e",
		"sf2e",
		"essence20",
		"e20",
		"dnd5e",
		"vtm5e"
	],
	"private": true,
	"author": "Randal T Meyer <randal.t.meyer@gmail.com> (https://rpgsage.io)",
	"contributors": [],
	"license": "GPL-3.0-only",
	"bugs": {
		"url": "https://github.com/rpg-sage-creative/rpg-sage/issues",
		"email": "bugs@rpgsage.io"
	},
	"homepage": "https://github.com/rpg-sage-creative/rpg-sage#readme",
	"funding": {
		"type": "patreon",
		"url": "https://www.patreon.com/rpgsage"
	},
	"repository": "github:rpg-sage-creative/rpg-sage",
	"workspaces": [
		"packages/*/*"
	],
	"devDependencies": {
		"@types/jest": "^29.5.14",
		"@types/node": "^22.15.17",
		"jest": "^29.7.0",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@aws-sdk/client-sns": "3.787.0",
		"@napi-rs/canvas": "^0.1.71",
		"discord.js": "^14.21.0",
		"regex": "^6.0.1"
	},
	"exifreader": {
		"include": {
			"file": true,
			"gif": true,
			"jpeg": true,
			"png": true,
			"png_file": true,
			"webp": true
		}
	},
	"scripts": {
		"build": "bash ./modules/core-utils/scripts/sh/build.sh --skipIndexTs",
		"release": "bash ./modules/core-utils/scripts/sh/release.sh",
		"test": "bash ./modules/core-utils/scripts/sh/test.sh",
		"prestart-dev": "npm run test",
		"start-dev": "node ./build/bot.mjs codeName=dev --getFromEnvJson",
		"prestart-dev-and-services": "npm run test",
		"start-dev-and-services": "node ./build/bot.mjs codeName=dev --getFromEnvJson --spawnServices",
		"app-commands": "node ./build/app-commands.mjs codeName=dev dataRoot='./docker-volumes/rpg-sage-mono'"
	}
}
